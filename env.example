# Upstash Redis Configuration
# Get these from: https://console.upstash.com/
KV_REST_API_URL=https://your-database-name.upstash.io
KV_REST_API_TOKEN=your_actual_upstash_token_here

# JWT Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_random_64_character_jwt_secret_here

# NextAuth Configuration (for production)
# Change this to your actual domain when deploying
NEXTAUTH_URL=https://your-domain.vercel.app
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
NEXTAUTH_SECRET=your_random_64_character_nextauth_secret_here

# Email Configuration (optional - for future features)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development 